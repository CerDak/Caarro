<AuthorizeView>
    <Authorized>
        <MudMenu Dense="true" AnchorOrigin="Origin.BottomLeft">
            <ActivatorContent>
                <MudAvatar Color="Color.Secondary">@char.ToUpper(@context.User.Identity!.Name![0])</MudAvatar>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Href="MicrosoftIdentity/Account/SignOut">Sign Out</MudMenuItem>
            </ChildContent>
        </MudMenu>
    </Authorized>
    <NotAuthorized>
        <MudLink Href="MicrosoftIdentity/Account/SignIn" Color="Color.Inherit">Log in</MudLink>
    </NotAuthorized>
</AuthorizeView>